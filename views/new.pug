extends layout

block content
  form(method="post", action="/schedules").my-3
    input(type="hidden" name="_csrf" value!=csrfToken)
    div.form-group
      label(for="scheduleName") 予定名
      input(type="text" name="scheduleName")#scheduleName.form-control
    div.form-group
      label(for="memo") メモ
      textarea(name="memo")#memo.form-control
    div.form-group
      label(for="candidates") カレンダーより候補日程の選択
      input(name="candidates" type="text" placeholder="クリックしてカレンダーを表示し、日付と時間を選択してください")#candidates.form-control
    button(type="submit").btn.btn-info 予定をつくる
