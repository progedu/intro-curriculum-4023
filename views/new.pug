extends layout

block append head
  link(rel="stylesheet",
  href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css",
  integrity="sha256-siyOpF/pBWUPgIcQi17TLBkjvNgNQArcmwJB8YvkAgg=",
  crossorigin="anonymous")

block content
  form(method="post", action="/schedules", novalidate).my-3.needs-validation
    input(type="hidden" name="_csrf" value!=csrfToken)
    div.form-group
      label(for="scheduleName") 予定名
      input(type="text" name="scheduleName" required)#scheduleName.form-control
      div.invalid-feedback 予定名を入力してください
    div.form-group
      label(for="memo") メモ
      textarea(name="memo")#memo.form-control
    div.form-group
      label(for="candidates") 候補日程
      input(type="text" name="candidates" rows="4" required)#candidates.form-control
      div.invalid-feedback 候補日を選択してください
    button(type="submit").btn.btn-info 予定をつくる
